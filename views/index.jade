extends layout

block content
  img(src='/images/battleships-header.jpg')
  div(id='nameDiv')
    h2(id='name')
  div(id='greeting' class="login")
    h2 Log In
    fieldset
      input(type="text",id="username", name="username", placeholder="enter username")
    input(id="submitNewUser" type="submit", value='submit')
  div(id='playerlistDiv')
    table
      tr
        th
          h2 Players list
        th
          h2 Player Status
      tr
        td
          ul#playerList
        td
          ul#playerStatus
    button(class='start-game' id="selectInput" type="button", value='Play') Start Game
  canvas(id="canvas" width="100%" height="500")
    
  form(action="" style="text-align: center;")
      ul(id="messages")
      input(id="m" autocomplete="off")
      button Send
  video(id="play" src='' style="display:none")
  video(id="audio" src='' controls autoplay style="display:none")
  
  canvas(id='canvas')
  script(src="/socket.io/socket.io.js")
  script(src="/javascripts/clientCM.js")
  script(src="/javascripts/boardDrawer.js")
  script(src="/javascripts/clientGameLogics.js")
  script(src="/javascripts/clientMCLogics.js")
  script(src="/javascripts/simplepeer.min.js")
  script(src="/javascripts/chat.js")
  script(src="https://code.jquery.com/jquery-1.11.1.js")
  script.
      // audio chat
      var audio = document.getElementById('audio');
      var canvas = document.getElementById('canvas');
      var context = canvas.getContext('2d');
      var socket = io();

      function loadAudio(stream) {
        audio.srcObject = stream;
        console.log('connected')
      }
      function failAudio() {
        console.log('not connected')
      }

      function viewAudio(audio,context) {
        context.drawImage(audio,0,0,400,400)
        socket.emit('stream',canvas.toDataURL('image/webp'))
      }

      $(function(){
        navigator.getUserMedia({video: false,audio: true},loadAudio,failAudio)
      })

      setInterval(function(){
        viewAudio(audio,context)
      },70)

      socket.on('stream', audio => {
        var img = document.getElementById('play');
        img.srcObject = audio
      })

      // [START appengine_websockets_js]
      $(function () {
        var socket = io();
        $('form').submit(function(){
          console.log($('#m').val());
          socket.emit('chat message', $('#m').val());
          socket.emit('audio message', $('#audio').attr('src'));
          $('#m').val('');
          $('#audio').attr('src', '')
          return false;
        });
        socket.on('chat message', function(msg){
          console.log(msg);
          $('#messages').append($('<li>').text(msg));
          //$('#messages').value=msg;
          window.scrollTo(0, document.body.scrollHeight);
        });
        socket.on('audio message', function(audio){
          console.log(audio);
          $('#audio').attr('src', audio);
        });
      });
  